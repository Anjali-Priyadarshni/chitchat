<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="css/style.css">
   <style>
    /* ===== Header ===== */
header {
  background-color: #1a2030;
  color: white;
  padding: 10px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1000;

}

header h1 {
  margin: 0;
  font-size: 20px;
  font-weight: 500;
}

.btn-group {
  display: flex;
  gap: 12px;
}

.login-btn {
  background: #ffffff;
  color: #4e73df;
  border: none;
  padding: 7px 16px;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
}

.login-btn:hover {
  background: #e2e6ff;
}
    /* Admin specific */
    .admin-container {
      max-width: 900px;
      margin: 20px auto;
      background: rgb(189, 104, 104);
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table th, table td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: center;
      font-size: 14px;
    }

    table th {
      background-color: #2c3e50;
      color: white;
    }

    .action-btn {
      padding: 6px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 12px;
    }

    .edit-btn {
      background-color: #3498db;
      color: white;
    }

    .delete-btn {
      background-color: #e74c3c;
      color: white;
    }
    /* ===== Footer ===== */
footer {
  background: #343a40;
  color: #ccc;
  text-align: center;
  /* padding: 200px 200px 0px 200px; */
  font-size: 13px;
  position: sticky;
  bottom: 0;
}
   </style> 
  
    <link rel="stylesheet" href="chitchat.css">
  
</head>
<body>

  <!-- Header -->
  <header>
    <h1>welcome <%= username %> to Admin Dashboard</h1>
    <div class="btn-group">
       <form action="/logout" method="post">
      <button class="login-btn">Logout</button>
      </form>
      <form action="/chat" method="post">
          <button class="login-btn">Chat</button>
      </form>
    </div>
  </header>

  

  <!-- Admin Content -->
  <div class="admin-container">
    <h2>User Management</h2>

    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Role</th>
          <th>Active</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="userTable">
  <% userInfo.forEach( user => { %>
    <tr>
          <td>1</td>
          <td><%= user.name %></td>
          <td><%= user.email_id %></td>
          <td><%= user.phone_no %></td>
          <td><%= user.role %></td>
          <td><%= user.active %></td>
          <td>
            <button class="action-btn edit-btn"onclick="editUser(this)">Edit</button>
            <button class="action-btn delete-btn" onclick="deleteUser(this)">Delete</button>
          </td>    
     </tr>
    
        <% })%>
      </tbody>
    </table>
  </div>

  <script>
    function deleteUser(btn) {
      if (confirm('Are you sure you want to delete this user?')) {
        btn.closest('tr').remove();
      }
    }
  </script>
    <footer>
